<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_app_bar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:menu="@menu/menu_contact_details"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/contact_details_title"
            app:titleTextColor="?android:attr/textColorPrimaryInverse" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <!-- Avatar and Name Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_large">

                <!-- Large Avatar -->
                <dev.panthu.contactavatorapplication.ui.components.AvatarView
                    android:id="@+id/avatarView"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:contentDescription="@string/cd_avatar"
                    app:avatarSize="@dimen/avatar_size_large"
                    tools:src="@drawable/avatar_01" />

                <!-- Contact Name -->
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size_headline"
                    android:textStyle="bold"
                    tools:text="John Doe" />

            </LinearLayout>

            <!-- Phone Section Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/phoneCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_card"
                app:contentPadding="@dimen/padding_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Phone Label and Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_phone"
                            android:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_phone_label"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/text_size_caption" />

                            <TextView
                                android:id="@+id/phoneTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="@dimen/text_size_body"
                                tools:text="+1 (555) 123-4567" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Phone Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/callButton"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/contact_details_call"
                            app:icon="@drawable/ic_phone" />

                        <Button
                            android:id="@+id/smsButton"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/contact_details_message"
                            app:icon="@drawable/ic_message" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Email Section Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/emailCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_card"
                app:contentPadding="@dimen/padding_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Email Label and Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_email"
                            android:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_email_label"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/text_size_caption" />

                            <TextView
                                android:id="@+id/emailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="@dimen/text_size_body"
                                tools:text="john.doe@email.com" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Email Action Button -->
                    <Button
                        android:id="@+id/emailButton"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/contact_details_email"
                        app:icon="@drawable/ic_email" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Address Section Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/addressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_card"
                app:contentPadding="@dimen/padding_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Address Label and Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_location"
                            android:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_address_label"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/text_size_caption" />

                            <TextView
                                android:id="@+id/addressTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="@dimen/text_size_body"
                                tools:text="123 Main St, City, ST 12345" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Address Action Button -->
                    <Button
                        android:id="@+id/mapButton"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/action_view_map"
                        app:icon="@drawable/ic_location" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Edit FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_normal"
        android:contentDescription="@string/action_edit"
        android:src="@drawable/ic_edit"
        app:elevation="@dimen/elevation_fab"
        app:tint="?android:attr/textColorPrimaryInverse" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
